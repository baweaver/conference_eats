<section id="gathering-list" class="section" aria-label="gathering list">
  <div class="columns">
    <% gatherings.each do |gathering| %>
      <div class="column is-one-quarter">
        <article
          class="gathering card"
          aria-labelledby="gathering-title"
          aria-describedby="gathering-description"
          tabindex="0"
          aria-posinset="1"
          aria-setsize="1"
        >
          <%=
            image_tag('railsconf_2023.jpg',
              class: 'card-image',
              alt: "RailsConf Banner featuring Atlanta Georgia"
            )
          %>

          <div class="card-content">
            <%= link_to gathering_path(gathering) do %>
              <h3 class="gathering-title title"><%= gathering.name %></h3>
            <% end %>

            <div class="gathering-location subtitle" aria-label="gathering location">
              <%= gathering.location %>
            </div>

            <div class="content">
              <div class="gathering-description" aria-label="gathering description">
                <%= gathering.description %>
              </div>

              <span class="gathering-time" aria-label="gathering time">
                on <time datetime="2023-04-24 8:00">April 24th</time> to <time datetime="2023-04-26 17:00">April 26th 2023</time>
              </span>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  </div>
</section>
